<div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Solicitar material</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="{{ path('home') }}" method="POST">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-9">
                        <div class="form-group">
                            <label>Demandante</label>
                            <select class="form-control" id="place" name="place">
                                <option value="user">(Usuario actual)</option>
                                {% for place in places %}
                                    <option value="{{ place.id }}">{{ place.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <a class="btn btn-app" href="{{ path('places.create') }}">
                            <i class="fa fa-map-marker"></i> Crear
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-9">
                        <div class="form-group">
                            <label>Imprimible</label>
                            <select class="form-control" id="thing" name="thing">
                                {% for thing in things %}
                                    <option value="{{ thing.id }}">{{ thing.type }} - {{ thing.model }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <a class="btn btn-app" href="{{ path('things.create') }}">
                            <i class="fa fa-print"></i> Crear
                        </a>
                    </div>
                </div>
                <div class="form-group">
                    <label>Cantidad</label>
                    <input type="text" class="form-control" placeholder="Cantidad" id="amount" name="amount">
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <input type="hidden" class="form-control" id="needs" name="needs" value="needs">
                <button type="submit" class="btn btn-primary">Solicitar</button>
            </div>
        </form>
    </div>
    <!-- /.box -->

</div>
<!--/.col (left) -->
